generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Wizard {
  id          String    @id
  fullName    String
  email       String    @unique
  avatarUrl   String?
  phoneNumber String?
  karmaScore  Int       @default(0)
  karmaRank   KarmaRank @default(MUGGLE)
  role        UserRole  @default(USER)
  isBanished  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
}

enum KarmaRank {
  MUGGLE
  WIZARD
  AUROR
  DARK_KNIGHT
}

enum UserRole {
  USER
  ADMIN
}
